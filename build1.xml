<project basedir="." default="runTest" name="Ant file for TestNG">
	
	<property name="src" location="src" />
	<property name="bin" location="bin" />
	<property name="libs" location="jars" />
	
		
	<path id="class.path">
		<fileset dir="${libs}">
			<include name="*.jar" />
		</fileset>
	</path>	
	
	<target name="compile">
		<javac destdir="classes" debug="true" srcdir="${src}" fork="yes" 
			  executable="C:\Program Files\Java\jdk1.7.0_51\bin\javac.exe" encoding="utf-8">
			<classpath refid="class.path" />
		</javac>
	</target>
		
	<taskdef name="testng" classname="org.testng.TestNGAntTask">
		<classpath>
			<pathelement location="${libs}/testng.jar"/>			
		</classpath>
	</taskdef>
	
	<target name="runTest"  depends="compile">
		<testng outputdir="test-ouput" classpathref="class.path"> 
			<xmlfileset dir="." includes="testng.xml"/>
		</testng>
	</target>
	
</project>